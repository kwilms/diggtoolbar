<bindings xmlns="http://www.mozilla.org/xbl"
  xmlns:xbl="http://www.mozilla.org/xbl"
  xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!-- Checkbox -->
  <binding id="gs-digg-checkbox">
    <resources>
      <stylesheet src="chrome://digg/skin/common/checkbox/gsDiggCheckbox.css"/>
    </resources>

    <content>
      <xul:hbox class="checkbox-icon-box">
        <xul:image class="checkbox-check" anonid="gs-digg-checkbox-check"
          xbl:inherits="checked,disabled,childselected"/>
      </xul:hbox>
      <xul:hbox class="checkbox-label-box" flex="1">
        <xul:image class="checkbox-icon" xbl:inherits="src"/>
        <xul:label class="checkbox-label" flex="1"
          xbl:inherits="xbl:text=label,accesskey,crop"/>
      </xul:hbox>
    </content>

    <handlers>
      <handler event="click" phase="capturing" button="0"
        action="_toogleChecked(event);"/>
      <handler event="keypress" keycode=" "
        action="_handleKeyPress(event);"/>
    </handlers>

    <implementation>

      <!-- Checked property. -->
      <property name="checked" >
        <setter>
          <![CDATA[
            if (val) {
              this.setAttribute("checked", "true");
            } else {
              this.removeAttribute("checked");
            }
          ]]>
        </setter>
        <getter>
          <![CDATA[
            return this.getAttribute("checked");
          ]]>
        </getter>
      </property>

      <!-- Label property. -->
      <property name="label" >
        <setter>
          <![CDATA[
            this.setAttribute("label", val);
          ]]>
        </setter>
        <getter>
          <![CDATA[
            return this.getAttribute("label");
          ]]>
        </getter>
      </property>

      <!-- Constructor -->
      <constructor>
        <![CDATA[
          // XXX: platform specific code
          var utilityService =
            Components.classes["@glaxstar.org/common/utility-service;1"].
              getService(Components.interfaces.gsIUtilityService);
          var platform = utilityService.getOperatingSystemName();

          document.getAnonymousElementByAttribute(
            this, "anonid", "gs-digg-checkbox-check").
              setAttribute("gsdiggplatform", platform);
        ]]>
      </constructor>

      <!--
        - Toogles the checked value.
        -->
      <method name="_toogleChecked">
        <parameter name="aEvent"/>
        <body>
          <![CDATA[
            this.removeAttribute("childselected");
            this.checked = !this.checked;

            aEvent.target.doCommand();
          ]]>
        </body>
      </method>

      <!--
        - Toogles the checked value when the keypress event is called.
        -->
      <method name="_handleKeyPress">
        <parameter name="aEvent"/>
        <body>
          <![CDATA[
            if (aEvent.charCode == 32) {
              this._toogleChecked(aEvent);
            }
          ]]>
        </body>
      </method>

    </implementation>
  </binding>

</bindings>
